{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "notari-tray",
	"version": "0.1.0",
	"identifier": "com.notari.tray",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build"
	},
	"app": {
		"windows": [
			{
				"label": "popover",
				"title": "Notari",
				"width": 420,
				"height": 780,
				"resizable": false,
				"fullscreen": false,
				"visible": false,
				"decorations": false,
				"alwaysOnTop": true,
				"skipTaskbar": true,
				"center": false,
				"focus": true,
				"shadow": true,
				"transparent": true,
				"titleBarStyle": "Overlay"
			}
		],
		"security": {
			"csp": null
		},
		"macOSPrivateApi": true
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"externalBin": ["bin/sck-recorder"],
		"macOS": {
			"signingIdentity": "Apple Development: Dik Rana (89XJ5N7N23)",
			"hardenedRuntime": true,
			"entitlements": "entitlements.plist"
		}
	}
}
